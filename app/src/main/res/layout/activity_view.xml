<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewActivity">

    <ImageView
        android:layout_margin="50dp"
        android:id="@+id/back_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/view_number_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toStartOf="@+id/next_image"
        app:layout_constraintStart_toEndOf="@+id/back_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NUll"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="@+id/view_number_image"
        app:layout_constraintStart_toStartOf="@+id/view_number_image"
        app:layout_constraintTop_toBottomOf="@id/view_number_image" />

    <TextView
        android:id="@+id/view_desc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="NULL"
        app:layout_constraintEnd_toEndOf="@+id/view_title_text"
        app:layout_constraintStart_toStartOf="@+id/view_title_text"
        app:layout_constraintTop_toBottomOf="@+id/view_title_text" />


    <ImageView
        android:layout_margin="50dp"
        android:id="@+id/next_image"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>